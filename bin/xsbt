#!/bin/sh

LAUNCH=`dirname $0`/sbt-launch-0.10.1.jar
URL='http://typesafe.artifactoryonline.com/typesafe/ivy-releases/org.scala-tools.sbt/sbt-launch/0.10.1/sbt-launch.jar'

if [ ! -f $LAUNCH ] ; then
  curl -f $URL -o $LAUNCH || exit
fi

if [ `uname -s` = Linux ] ; then
  export JAVA_HOME=/usr/lib/jvm/java-6-sun-1.6.0.25
else
  if [ `uname -s` = Darwin ] ; then
    export JAVA_HOME=`/usr/libexec/java_home -F -v1.5+`
  else
    export JAVA_HOME=/usr
  fi
fi

export PATH=$JAVA_HOME/bin:$PATH
JAVA=$JAVA_HOME/bin/java

$JAVA \
  -Xss16M -Xmx1536M -XX:MaxPermSize=256M \
  -Dsbt.boot.directory=$HOME/.sbt/boot/ \
  -Djava.library.path= \
  -Djava.ext.dirs= \
  -Dfile.encoding=UTF-8 \
  -Dsbt.boot.directory=$HOME/.sbt/boot/ \
  $JAVA_OPTS \
  -classpath $LAUNCH \
  xsbt.boot.Boot "$@"
